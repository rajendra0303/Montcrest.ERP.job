<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Montcrest</title>

    <!-- Fonts & Icons -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <!-- CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Montcrest.Web.styles.css" asp-append-version="true" />

    <style>
        :root {
            --primary: #3b82f6;
            --primary-dark: #2563eb;
            --sidebar-bg: #1e293b;
            --bg-body: #f8fafc;
            --text-main: #1e293b;
            --text-muted: #64748b;
            --nav-height: 70px;
        }

        body {
            background-color: var(--bg-body);
            font-family: 'Inter', sans-serif;
            color: var(--text-main);
            overflow-x: hidden;
        }

        /* Top Navbar */
        .navbar {
            height: var(--nav-height);
            background: white !important;
            border-bottom: 1px solid #e2e8f0 !important;
            z-index: 1030;
        }

        .navbar-brand {
            font-weight: 700;
            letter-spacing: -0.025em;
            color: var(--primary) !important;
        }

        /* Sidebar Styling */
        .sidebar {
            background: var(--sidebar-bg);
            min-height: calc(100vh - var(--nav-height));
            padding: 1.5rem 1rem;
            transition: all 0.3s;
        }

        .sidebar-heading {
            color: #94a3b8;
            font-size: 0.75rem;
            text-transform: uppercase;
            font-weight: 700;
            padding: 0 1.25rem;
            margin-bottom: 1rem;
            letter-spacing: 0.05em;
        }

        .sidebar a {
            color: #cbd5e1;
            text-decoration: none;
            display: flex;
            align-items: center;
            padding: 0.8rem 1.25rem;
            border-radius: 12px;
            margin-bottom: 0.4rem;
            font-weight: 500;
            transition: all 0.2s;
        }

            .sidebar a i {
                margin-right: 12px;
                font-size: 1.2rem;
            }

            .sidebar a:hover {
                background: rgba(255, 255, 255, 0.05);
                color: white;
            }

            .sidebar a.active-link {
                background: var(--primary);
                color: white;
                box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3);
            }

        /* Main Content */
        .content-area {
            padding: 2rem;
            min-height: calc(100vh - var(--nav-height));
        }

        /* Button Customization to match dashboard */
        .btn-logout {
            border-radius: 10px;
            font-weight: 600;
            padding: 0.5rem 1.2rem;
            font-size: 0.875rem;
            border: 1px solid #fee2e2;
            color: #ef4444;
            background: #fef2f2;
            transition: all 0.2s;
        }

            .btn-logout:hover {
                background: #ef4444;
                color: white;
            }

        @@media (max-width: 768px) {
            .sidebar {
                min-height: auto;
            }
        }
    </style>
</head>

<body>

    <!-- TOP NAVBAR -->
    <nav class="navbar navbar-expand-lg sticky-top navbar-light">
        <div class="container-fluid px-4">
            <a class="navbar-brand fs-4" href="/">
                <i class="bi bi-layers-half me-2"></i>Montcrest
            </a>

            <div class="ms-auto">
                @if (User.Identity != null && User.Identity.IsAuthenticated)
                {
                    <div class="d-flex align-items-center">
                        <span class="me-3 d-none d-sm-block text-muted small">
                            @User.Identity.Name
                        </span>
                        <a class="btn btn-logout" href="/Auth/Logout">
                            <i class="bi bi-box-arrow-right me-1"></i> Logout
                        </a>
                    </div>
                }
            </div>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">

            <!-- LEFT SIDEBAR -->
            @if (User.Identity != null && User.Identity.IsAuthenticated)
            {
                <div class="col-12 col-md-3 col-lg-2 sidebar">
                    <div class="sidebar-heading">Main Menu</div>

                    @* Candidate Navigation *@
                    @if (User.IsInRole("Candidate"))
                    {
                        <a href="/Candidate/Index" class="@(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active-link" : "")">
                            <i class="bi bi-grid"></i> Dashboard
                        </a>
                        <a href="/Candidate/MyApplications">
                            <i class="bi bi-file-earmark-text"></i> My Applications
                        </a>
                    }

                    @* Employee Navigation *@
                    @if (User.IsInRole("Employee"))
                    {
                        <a href="/Employee/Dashboard" class="@(ViewData["Title"]?.ToString() == "Employee Dashboard" ? "active-link" : "")">
                            <i class="bi bi-grid"></i> Dashboard
                        </a>
                        <a href="/Employee/ApplyLeave">
                            <i class="bi bi-calendar-plus"></i> Apply Leave
                        </a>
                        <a href="/Employee/MyLeaves">
                            <i class="bi bi-clock-history"></i> My Leaves
                        </a>
                    }

                    @* Manager Navigation *@
                    @if (User.IsInRole("Manager"))
                    {
                        <a href="/Manager/Index">
                            <i class="bi bi-speedometer2"></i> Manager Dash
                        </a>
                        <a href="/Manager/LeaveApplications">
                            <i class="bi bi-check2-square"></i> Leave Requests
                        </a>
                    }
                </div>
            }

            <!-- MAIN CONTENT -->
            <div class="@(User.Identity.IsAuthenticated ? "col-md-9 col-lg-10" : "col-12") content-area">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>

        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>